@page
@model SuperHeroes.Pages.CategoriasModel
@{
}
<div class="card">
    <div class="card-header bg-dark text-white d-flex justify-content-between">
        <h3><i class="bi bi-list-ol"></i> Listado de Categorías</h3>
        <a asp-page="/nueva-categoría" class="btn btn-success"><i class="bi bi-plus-circle"></i> Nueva Categoría</a>

    </div>
    <div class="card-body">
        <table class"table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var categoria in Model.Categorias)
                {
                <tr>
                    <td>@categoria.Id</td>
                    <td>@categoria.Nombre</td>
                    <td>
                            <button class="btn btn-warning"><i class="bi bi-pencil-fill"></i> Editar</button>
                            <button class="btn btn-danger"><i class="bi bi-trash3-fill"></i> Borrar</button>
                    </td>
                </tr>
                }
               
            </tbody>
        </table>
    </div>

</div>